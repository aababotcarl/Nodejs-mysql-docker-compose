<% include partials/header.ejs %>
<div class="table-wrapper">
    <% if (student_details.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">STUDENT ID</th>
                    <th scope="col">Class</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Section</th>
                    <th scope="col">School Name</th>
                </tr>
            </thead>
            <tbody>
                <% student_details.forEach((student_detail, index) => { %>
                    <tr>
                        <th scope="row"><%= student_detail.student_id %></th>
                        <td><%= student_detail.student_class %></td>
                        <td><%= student_detail.first_name %></td>
                        <td><%= student_detail.last_name %></td>
                        <td><%= student_detail.student_class_section %></td>
                        <td><%= student_detail.student_school_name %></td>
                        <td>
                            <a href="/edit/<%= student_detail.student_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                            <a href="/delete/<%= student_detail.student_id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No Students found. Go <a href="/add" >here</a> to add students.</p>
    <% } %>
</div>
</div>
</body>
</html>